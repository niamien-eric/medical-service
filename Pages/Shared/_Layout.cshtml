<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medical_Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/w3.css">
    <style>
        a{
            text-decoration:none;
        }
    </style>
</head>

<body>
    <header>
        <nav>
            <div class="w3-bar w3-border-light-grey w3-padding">
                <a class="w3-bar-item w3-button" asp-area="" asp-page="/Index">Medical Manager</a>
                @if (!Context.User.Identity.IsAuthenticated){
                    <a class="w3-bar-item w3-button w3-blue-gray w3-right w3-round-medium" asp-page="/Admin/Index">Connexion</a>
                }
                else{
                    <a class="w3-bar-item w3-button  w3-round-medium" asp-page="/Admin/Consults/Index">Consultation</a>
                    <a class="w3-bar-item w3-button  w3-round-medium" asp-page="/Admin/Products/Index">Gestion du stock</a>
                    
                    <a class="w3-bar-item w3-button w3-right w3-pale-red w3-round-medium" asp-page-handler="Logout" asp-page="/Admin/Index">Se déconnecter</a>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--
        <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Medical Manager - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
